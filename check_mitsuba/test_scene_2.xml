<scene version="3.0.0">
    <default name="spp" value="128"/>
    <default name="res" value="1024"/>

    <default name="aside" value=".03"/>
    <default name="alen" value="5"/>
    <default name="amove" value="2.5"/>

    <default name="tableup" value="-5"/>

    <!-- integrator -->

    <integrator type="volpath">
        <integer name="max_depth" value="12"/>
    </integrator>

    <!-- camera -->

    <!--<sensor type="perspective" id="sensor">
        <transform name="to_world">
            <lookat target="0, 0, 5"
                    origin="0, 35, 5"
                    up    ="0, 0, 1"/>
        </transform>
        <sampler type="independent">
            <integer name="sample_count" value="$spp"/>
        </sampler>
        <film type="hdrfilm">
            <rfilter type="box"/>
            <integer name="width"  value="$res"/>
            <integer name="height" value="$res"/>
        </film>
    </sensor>-->

    <sensor type="thinlens">
        <transform name="to_world">
            <lookat target="0, 0, 5"
                    origin="5, 40, 5"
                    up    ="0, 0, 1"/>
        </transform>
        <float name="aperture_radius" value=".75"/>
        <float name="focus_distance" value="40"/>
        <float name="fov" value="45"/>

        <sampler type="independent">
            <integer name="sample_count" value="$spp"/>
        </sampler>

        <film type="hdrfilm">
            <rfilter type="box"/>
            <integer name="width"  value="$res"/>
            <integer name="height" value="$res"/>
            <string name="pixel_format" value="luminance"/>
        </film>
    </sensor>

    <!-- light -->

    <emitter type="constant">
        <rgb name="radiance" value=".1"/>
    </emitter>

    <shape type="cube">
        <emitter type="area">
            <rgb name="radiance" value="1.0"/>
        </emitter>
        <transform name="to_world">
            <scale value="20 .1 20"/>
            <translate value="0 -150 5"/>
        </transform>
    </shape>

    <!--<emitter type="projector">
        <rgb name="irradiance" value="1000"/>
        <float name="fov" value="40"/>
        <transform name="to_world">
            <lookat origin="0 -20 5"
                    target="0 0 5"
                    up="0, 0, 1"/>
        </transform>
    </emitter>-->

    <!-- scene -->

    <shape type="cube">
        <bsdf type="twosided">
            <bsdf type="roughconductor">
            </bsdf>
        </bsdf>
        <transform name="to_world">
            <scale value="20 20 .1"/>
            <translate value="0 0 15"/>
        </transform>
    </shape>
    <!--<shape type="cube">
        <bsdf type="twosided">
            <bsdf type="roughconductor">
            </bsdf>
        </bsdf>
        <transform name="to_world">
            <scale value="20 20 .1"/>
            <translate value="0 0 -5"/>
        </transform>
    </shape>-->

    <shape type="obj" id="tavolo_superficie">
        <string name="filename" value="objs/rough_surface-90x90.obj"/>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="1"/>
        </bsdf>
        <transform name="to_world">
            <scale value="20 20 .5"/>
            <translate value="0 0 -1"/>
        </transform>
    </shape>

    <!-- axes -->

    <shape type="cube" id="x-axes">
        <bsdf type="diffuse">
            <rgb name="reflectance" value="1 0 0"/>
        </bsdf>
        <transform name="to_world">
            <scale value="$alen $aside $aside"/>
            <translate value="$amove 0 0"/>
        </transform>
    </shape>
    <shape type="cube" id="y-axes">
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0 1 0"/>
        </bsdf>
        <transform name="to_world">
            <scale value="$aside $alen $aside"/>
            <translate value="0 $amove 0"/>
        </transform>
    </shape>
    <shape type="cube" id="z-axes">
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0 0 1"/>
        </bsdf>
        <transform name="to_world">
            <scale value="$aside $aside $alen"/>
            <translate value="0 0 $amove"/>
        </transform>
    </shape>

    <!-- end -->
</scene>
